<%= form_for(@owner) do |f| %>
  <% if @owner.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@owner.errors.count, "error") %> prohibited this owner from being saved:</h2>

      <ul>
      <% @owner.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>


  <div class="field">

    <h2>Cats</h2>

    <!-- Look at the @owner.cats relationship
         and construct a form for each cat -->
    <%= f.fields_for :cats do |cf| %>

      <%= cf.label :name %><br>
      <%= cf.text_field :name %>

    <% end %>

  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
