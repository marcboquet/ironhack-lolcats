<h1>Search for a cat</h1>

<!-- Construct the form for searching -->

<%= form_tag cats_search_path, method: :get do %>

  <%= search_field_tag :name %>

  <%= submit_tag 'Search', name: nil %>

<% end %>

<% if @cats.any? %>

  <h2>Search results</h2>

  <!-- render '_cats.html.erb' partial -->
  <%= render 'cats' %>

<% end %>
