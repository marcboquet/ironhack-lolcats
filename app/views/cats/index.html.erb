<h1>All the LOLcats!!!1</h1>

<div class="cats-list">

  <ul>

    <% @cats.each do |cat| %>

      <li>

        <%= cat.name %>

        <span class='birth-date'>

          <!-- Only format the date if birth_date exists -->
          <%= cat.birth_date.to_s(:short) if cat.birth_date %>

        </span>

      </li>

    <% end %>

  </ul>

</div>
